<form class="border border-light p-5" {{action "update" on="submit"}}>
  <p class="h4 mb-4 rounded-0 text-center">Measurements for  **current user**</p>
  {{input type="number" min=10 max=300 size=3 value=this.userMeasurements.height}}
  <div class="form-row mb-4">
      <div class="col-xs-2">
        <label for="Height">Height (cm)</label>
        <input class="form-control mb-4 rounded-0" id="Height" type="number" min="60" max="300" maxlength="3" size="3">
      </div>
      <div class="col-xs-2">
        <label for="Height">Waist Width (cm)</label>
        <input class="form-control mb-4 rounded-0" id="WaistWidth" type="number" min="10" max="300" maxlength="3" size="3">
      </div>
      <div class="col-xs-2">
        <label for="Height">Shoulder Width (cm)</label>
        <input class="form-control mb-4 rounded-0" id="ShoulderWidth" type="number" min="10" max="300" maxlength="3" size="3">
      </div>
  </div>
  <div class="form-row mb-4">
    <div class="col-xs-2">
      <label for="Height">Arm Length (cm)</label>
      <input class="form-control mb-4 rounded-0" id="ArmLength" type="number" min="10" max="300" maxlength="3" size="3">
    </div>
    <div class="col-xs-2">
      <label for="Height">Arm Width (cm)</label>
      <input class="form-control mb-4 rounded-0" id="ArmWidth" type="number" min="10" max="300" maxlength="3" size="3">
    </div>
    <div class="col-xs-2">
      <label for="Height">Under Bust (cm)</label>
      <input class="form-control mb-4 rounded-0" id="UnderBust" type="number" min="10" max="300" maxlength="3" size="3">
    </div>
  </div>
  <div class="form-row mb-4">
    <div class="col-xs-2">
      <label for="Height">Over Bust (cm)</label>
      <input class="form-control mb-4 rounded-0" id="OverBust" type="number" min="10" max="300" maxlength="3" size="3">
    </div>
    <div class="col-xs-2">
      <label for="Height">Hip Width (cm)</label>
      <input class="form-control mb-4 rounded-0" id="HipWidth" type="number" min="10" max="300" maxlength="3" size="3">
    </div>
    <div class="col-xs-2">
      <label for="Height">Thigh Width (cm)</label>
      <input class="form-control mb-4 rounded-0" id="ThighWidth" type="number" min="10" max="300" maxlength="3" size="3">
    </div>
  </div>
  <div class="form-row mb-4">
    <div class="col-xs-2">
      <label for="Height">Calf Width (cm)</label>
      <input class="form-control mb-4 rounded-0" id="CalfWidth" type="number" min="10" max="300" maxlength="2" size="2">
    </div>
    <div class="col-xs-2">
      <label for="Height">Leg Length (cm)</label>
      <input class="form-control mb-4 rounded-0" id="LegLength" type="number" min="10" max="300" maxlength="3" size="3">
    </div>
    <div class="col-xs-2">
      <label for="Height">Wrist Width (cm)</label>
      <input class="form-control mb-4 rounded-0" id="WristWidth" type="number" min="10" max="300" maxlength="3" size="3">
    </div>
    <div class="col-xs-2">
      <label for="Height">Ankle Width (cm)</label>
      <input class="form-control mb-4 rounded-0" id="AnkleWidth" type="number" min="10" max="300" maxlength="2" size="2">
    </div>
  </div>
  <button class="btn btn-info btn-block" type="submit">Save</button>
</form>
